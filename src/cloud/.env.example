# LogNarrator Cloud API Environment Configuration

# Security
SECRET_KEY=your-super-secret-key-at-least-32-characters-long-for-jwt-signing
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://lognarrator:password@localhost:5432/lognarrator
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Vector Database (Qdrant)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_COLLECTION=log_vectors
VECTOR_DIMENSION=768

# API Configuration
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Processing
BATCH_SIZE=100
MAX_QUEUE_SIZE=10000

# Models
EMBEDDING_MODEL=all-MiniLM-L6-v2
LANGUAGE_MODEL_TYPE=mistral

# Encryption
ENCRYPTION_KEY_PATH=/app/config/keys/server_private.key